#! /bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d File Edit View Go Bookmark Help About Cloud Media Net

bspc config border_width        1
bspc config window_gap          9
bspc config top_padding		 	    40

# BSPWM-ROUNDED-AUR
bspc config border_radius	 	3

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Nitrogen state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mpv state=floating
bspc rule -a Freetube desktop='^3' follow=on
bspc rule -a Screenkey manage=off

# MY APPLICATON START UP
nm-applet &
blueman-applet &
polybar -r &
nitrogen --restore &
dunst &
xsetroot -cursor_name left_ptr &
